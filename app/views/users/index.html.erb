<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>


<div id="supertable">
  <div id="title"><%=t :user_list %></div>
  <table>
    <thead>
      <tr>
        <th><%=t :username %></th>
        <th><%=t :camera_whitelist %></th>
        <th><%=t :user_privilege %></th>
        <th colspan=2><%=t :options %></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.cameras.empty? ? "All cameras" : user.cameras.gsub( "|", ", " ) %></td>
          <td><%= user.is_admin ? "Administrator" : "Viewer" %></td>
          <td><%= link_to( t( :edit ), edit_user_path(user) ) %></td>
          <td><%= link_to( t( :destroy ), user, method: :delete, data: { confirm: "Are you sure?" } ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to t(:new_user), new_user_path, method: :get %>
  <%= button_to t(:back), admin_path, method: :get %>
</div>