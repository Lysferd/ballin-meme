<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" data-tip="test">
    <%= f.label :username %><br>
    <%= f.text_field :username, size: 4 %>
  </div>
  <div class="field">
    <%= f.label :password, 'Password' %><br>
    <%= f.password_field :password, size: 8 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirm' %><br>
    <%= f.password_field :password_confirmation, size: 8 %>
  </div>
  <div class="field">
    <%= f.label :camera_whitelist %><br>
    <%= f.text_field :camera_whitelist %>
  </div>
  <div class="field">
    <%= f.label :is_admin, 'Check if administrator' %>:
    <%= f.check_box :is_admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
