
<div id="tips_box">
  <div id="title"><%=t :tips %></div>
  
  <div class="field" data-form-id="username">
    <%=t :username %>:<p><%=t :tip_username %></p>
  </div>
  
  <div class="field" data-form-id="password">
  <%=t :password %>:<p><%=t :tip_password %></p>
  </div>
  
  <div class="field" data-form-id="password_confirmation">
  <%=t :confirm %>:<p><%=t :tip_confirm %></p>
  </div>
  
  <div class="field" data-form-id="cameras">
  <%=t :whitelist %>:<p><%=t :tip_whitelist %></p>
  </div>
</div>
