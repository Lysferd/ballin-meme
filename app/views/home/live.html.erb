<% if flash[:alert] %>
  <div id='alert'>
    Error: <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div id='notice'>
    Notice: <%= flash[:notice] %>
  </div>
<% end %>

<% if session[:user_id] %>
  
  <%= render 'hls' %>
  
<% else %>

  <div id="logo-palazzo">
    <%= image_tag( 'logopalazzo.png' ) %>
    <p>para utilizar este serviço por favor insira suas informações na área de login e senha</p>
  </div>

<% end %>

<% if Rails.env == 'development' %>
  <%= render 'devintel' %>
<% end %>
